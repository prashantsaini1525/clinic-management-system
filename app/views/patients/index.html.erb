<h1>Registered Patients</h1>

<p><%= link_to "Register New Patient", new_patient_path, class: "btn btn-primary" %></p>

<table border="1" cellpadding="8" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Disease</th>
      <th>Address</th>
      <th>Registered On</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.age %></td>
        <td><%= patient.disease %></td>
        <td><%= patient.address %></td>
        <td><%= patient.registered_on.strftime("%d %B %Y") %></td>
        <td>
        <%= link_to "Show", patient_path(patient) %> |
        <%= link_to "Edit", edit_patient_path(patient) %> |
        <%= button_to "Delete", patient_path(patient), method: :delete, data: { turbo_confirm: "Are you sure?" }, form: { style: "display:inline" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
