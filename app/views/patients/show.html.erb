<div class="patient-show-container">
  <div class="patient-card">
    <h2>Patient Profile</h2>
    <div class="patient-info">
      <div class="info-row"><strong>👤 Name:</strong> <span><%= @patient.name %></span></div>
      <div class="info-row"><strong>🎂 Age:</strong> <span><%= @patient.age %></span></div>
      <div class="info-row"><strong>🦠 Disease:</strong> <span><%= @patient.disease %></span></div>
      <div class="info-row"><strong>🏠 Address:</strong> <span><%= @patient.address %></span></div>
      <div class="info-row"><strong>🗓️ Registered On:</strong> <span><%= @patient.registered_on.strftime("%d %B %Y") %></span></div>
    </div>

    <div class="patient-actions">
      <%= link_to "✏️ Edit", edit_patient_path(@patient), class: "btn btn-edit" %>
      <%= button_to "🗑️ Delete", patient_path(@patient),
          method: :delete,
          data: { turbo_confirm: "Are you sure you want to delete this patient?" },
          class: "btn btn-delete",
          form: { style: "display:inline" } %>
      <%= link_to "← Back to Patients", patients_path, class: "btn btn-back" %>
    </div>
  </div>
</div>
