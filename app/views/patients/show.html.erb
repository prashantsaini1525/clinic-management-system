<h1>Patient Details</h1>

<ul>
    <li><strong>Name:</strong> <%= @patient.name %></li>
    <li><strong>Age:</strong> <%= @patient.age %></li>
    <li><strong>Disease:</strong> <%= @patient.disease %></li>
    <li><strong>Address:</strong> <%= @patient.address %></li>
    <li><strong>Registered On:</strong> <%= @patient.registered_on.strftime("%d %B %Y") %></li>
</ul>

<p>
    <%= link_to "Edit Patient", edit_patient_path(@patient), class: "btn btn-warning" %>
    <%= button_to "Delete Patient", patient_path(@patient),
    method: :delete,
    data: { turbo_confirm: "Are you sure you want to delete this patient?" },
    class: "btn btn-danger",
    form: { style: "display:inline" } %>
</p>

<p><%= link_to "← Back to Patient List", patients_path, class: "btn btn-secondary" %></p>
